@{
    Layout = null;
}
<div class="modal fade" id="card" tabindex="-1" role="dialog" aria-labelledby="cardModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="name" style="font-weight:bolder;"></h5>
                <button type="button" class="close" aria-label="Close" onclick="closeInfoCard();">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <img id="scenery-image" class="img-fluid" src="https://via.placeholder.com/500x300?text=Loading..." />
                <ul class="list-group">
                    <li class="list-group-item"><i class="fa fa-map-pin" aria-hidden="true"></i>&nbsp;<span id="address">Cras justo odio</span></li>
                    <li class="list-group-item"><i class="fa fa-image" aria-hidden="true"></i>&nbsp;<span id="website">Cras justo odio</span></li>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="closeInfoCard();">Close</button>
            </div>
        </div>
    </div>
</div>
